<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>        
    <add key="serilog:minimum-level" value="Information"/>
    <add key="serilog:using:File" value="Serilog.Sinks.File" />
    <add key="serilog:write-to:File.path" value="%APPDATA%\FileShareServiceDesktopClientLogs\UKHO.FileShareService.DesktopClient.Logs-.txt" />
    <add key="serilog:write-to:File.rollingInterval" value="Day" />
    <add key="serilog:write-to:File.fileSizeLimitBytes" value="5242880" />
    <add key="serilog:write-to:File.retainedFileCountLimit" value="7" />  
    <add key="serilog:write-to:File.outputTemplate" value="{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}" />
    <add key="RetryCount" value="3"/>
    <add key="SleepDurationMultiplier" value="2"/>
  </appSettings>
</configuration>